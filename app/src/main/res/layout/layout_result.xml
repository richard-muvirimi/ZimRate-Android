<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_5dp"
    app:cardCornerRadius="@dimen/space_5dp"
    app:cardElevation="@dimen/space_5dp"
    app:contentPadding="@dimen/space_5dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_5dp"
        android:drawableStart="?attr/ic_money"
        android:drawableLeft="?attr/ic_money"
        android:drawableEnd="?attr/ic_apply"
        android:drawableRight="?attr/ic_apply"
        android:drawablePadding="@dimen/space_10dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</androidx.cardview.widget.CardView>