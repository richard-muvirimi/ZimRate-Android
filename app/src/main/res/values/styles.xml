<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="calcDialogStyle">@style/AppTheme.CalcDialog</item>
    </style>

    <style name="Theme.App.Starting" parent="AppTheme" />

    <style name="AppTheme.Base" parent="BaseTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary
        </item>
    </style>

    <!--layout_toolbar-->

    <style name="AppTheme.Toolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline4">

    </style>

    <style name="AppTheme.Toolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">

    </style>

    <!--calculator-->

    <style name="AppTheme.CalcDialog" parent="CalcDialogStyle">
        <item name="calcOperationBtnStyle">@style/AppTheme.CalcDialog.Button</item>
        <item name="calcEraseBtnStyle">@style/AppTheme.CalcDialog.CalcEraseBtnStyle</item>
        <item name="calcExpressionStyle">@style/AppTheme.CalcDialog.CalcExpressionStyle</item>
        <item name="calcDialogButtonStyle">@style/AppTheme.CalcDialog.CalcDialogButtonStyle</item>
        <item name="calcAnswerBtnStyle">@style/AppTheme.CalcDialog.CalcAnswerBtnStyle</item>
        <item name="calcOperationBtnColor">@color/colorPrimaryLight</item>
        <item name="calcDividerColor">@color/colorPrimaryLight</item>

        <item name="calcButtonTextClear">@string/calculator_dialog_clear</item>
        <item name="calcButtonTextCancel">@string/calculator_dialog_cancel</item>
        <item name="calcButtonTextOk">@string/calculator_dialog_ok</item>

        <item name="calcErrors">@array/calculator_dialog_errors</item>
    </style>

    <style name="AppTheme.CalcDialog.Button" parent="CalcOperationBtnStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="selectableItemBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CalcDialog.CalcEraseBtnStyle" parent="CalcEraseBtnStyle">
        <item name="android:contentDescription">@string/calculator_dialog_erase</item>
        <item name="tint">@color/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.CalcDialog.CalcExpressionStyle" parent="CalcExpressionStyle">
        <item name="android:textColor">?attr/colorPrimaryLight</item>
    </style>

    <style name="AppTheme.CalcDialog.CalcAnswerBtnStyle" parent="CalcAnswerBtnStyle">
        <item name="android:text">@string/calculator_answer</item>
    </style>

    <style name="AppTheme.CalcDialog.CalcDialogButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorPrimaryLight</item>
    </style>

    <!--Widgets-->
    <style name="AppTheme.TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="startIconTint">?attr/colorPrimaryLight</item>
        <item name="counterMaxLength">@integer/maxvalue</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
        <item name="startIconDrawable">@drawable/ic_calculator</item>
        <item name="helperTextTextColor">?attr/colorPrimaryLight</item>
    </style>

    <!--Edit text app style-->
    <style name="AppTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <!--<item name="android:background">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="drawableTint">?attr/colorPrimaryLight</item>
    </style>

</resources>
